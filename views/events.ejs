    <!--  -->
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@600&display=swap"
      rel="stylesheet"
    />

    <title>Team Victory</title>
  </head>

  <body onload="populateTable()">
    <% var length = newEvent.length; %> <% var event = newEvent; %>

    <script>
      function populateTable() {
        var length = <%= length %>;

        var events = <%- JSON.stringify(newEvent) %>;

        for (x in events) {
          $('#event_table').append('<tr><td><a id="' + x + '" class="table_links" href="/views/archive/' + x + '">' +
            events[x].title + '</a></td><td>' +
            events[x].date + '</td></tr>');
        }
      }
    </script>

    <div
      class="jumbotron jumbotron-fluid mb-0 pb-0 border-bottom border-danger"id="header">
      <div class="container">
        <a class="logo" href="/views/home"><img
            src="https://i.imgur.com/WqY56yY.png"
            alt="Team Logo"
            width="75px"
            height="40px"/></a>

        <h3 id="team_name">Team Victory</h3>
        <!-- <a href="/views/auth/login" class="sign_in">
          <h6>Sign In</h6>
        </a>
        <a href="#" class="register">
          <h6>Register</h6>
        </a> -->
      </div>
    </div>

    <div class="jumbotron jumbotron-fluid mt-0 pt-1 pb-1" id="links">
      <div class="container">
        <ul class="nav justify-content-center">
          <li class="nav-item">
            <a class="nav-link" href="/views/home">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/views/characters">Characters</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/views/campaign">Campaign</a>
          </li>
          <li class="nav-item active">
            <a href="/views/events" class="nav-link">Events</a>
          </li>
        </ul>
      </div>
    </div>

    <div class="main">
      <form action="/views/events" method="POST">
        <div class="container d-flex justify-content-end mr-5">
          <button type="submit" class="btn btn-dark">Create New Event</button>
        </div>
      </form>
    </div>

    <div class="container mt-5">
      <div class="jumbotron jumbotron-fluid backsplash pt-0 pb-0">
        <div id="table-wrapper">
          <div id="table-scroll">
            <table class="table table-striped table-hover" id="event_table">
              <thead>
                <th class="table_title">Events</th>
              </thead>
              <tbody>
                <tr>
                  <th scope="col">Title</th>
                  <th scope="col">Date</th>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- JavaScript -->
    <!-- <script src="../scripts/dates.js"></script> -->
    <script src="../scripts/newEvent.js"></script>
    <!-- <script src="/database.js"></script> -->
